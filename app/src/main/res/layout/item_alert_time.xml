<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_pure_color"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_alert_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:00"
        android:textSize="@dimen/text_common" />

    <Button
        android:id="@+id/btn_alert_addtime"
        android:layout_width="@dimen/margin_left"
        android:layout_height="@dimen/margin_left"
        android:background="@drawable/bianjiicon"
        android:layout_alignParentRight="true" />

</RelativeLayout>