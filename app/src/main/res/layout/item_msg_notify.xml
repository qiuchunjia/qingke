<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_pure_color"
    android:orientation="vertical"
    android:padding="@dimen/margin_left_small">

    <ImageView
        android:id="@+id/iv_msg_notify"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/xitongxiaoxiicon" />

    <TextView
        android:id="@+id/tv_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_small"
        android:layout_toRightOf="@id/iv_msg_notify"
        android:text="系统消息"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/tv_notify_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_msg_notify"
        android:layout_marginLeft="@dimen/margin_left_small"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_toRightOf="@id/iv_msg_notify"
        android:maxLines="1"
        android:text="多行文本输入控件，多行文本输入控件"
        android:textColor="@color/text_more_gray"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_notify_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="03月20日  10:42"
        android:textColor="@color/text_more_gray"
        android:textSize="@dimen/text_small" />

</RelativeLayout>