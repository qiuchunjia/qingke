<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_pure_color"
    android:orientation="vertical"
    android:padding="@dimen/margin_left_small">

    <qcjlibrary.widget.RoundImageView


        android:id="@+id/riv_msg_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/default_image_small" />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/riv_msg_icon"
        android:layout_marginLeft="@dimen/margin_left_small"
        android:layout_toRightOf="@id/riv_msg_icon"
        android:text="呵呵哒"
        android:textColor="@color/text_user"
        android:textSize="@dimen/text_very_big" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user"
        android:layout_marginLeft="@dimen/margin_left_small"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_toRightOf="@id/riv_msg_icon"
        android:lineSpacingExtra="@dimen/text_lineSpacingExtra"
        android:text="赞了这条咨询！"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_common" />

    <TextView
        android:id="@+id/tv_other_replay"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="@dimen/margin_left_small"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/riv_msg_icon"
        android:background="@color/main_white_bg_color"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/text_lineSpacingExtra"
        android:maxLines="2"
        android:padding="@dimen/margin_left_small"
        android:text="雅蠛蝶：遗传有很多种，检查方法有多种多样。一，举例据了解的发"
        android:textColor="@color/text_more_gray"
        android:textSize="@dimen/text_common" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_small"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_toRightOf="@id/riv_msg_icon">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="03月20日 10:42"
            android:textColor="@color/text_more_gray"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>

</RelativeLayout>