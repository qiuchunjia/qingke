<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_notify"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_bg_color">

    <!-- 通知布局 -->

    <FrameLayout
        android:id="@+id/fl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginLeft="@dimen/margin_left_small"
        android:layout_marginTop="@dimen/margin_top">

        <qcjlibrary.widget.RoundImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sys" />

        <ImageView
            android:id="@+id/iv_remind"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/remind" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_toRightOf="@+id/fl_icon"
        android:text="系统通知"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/fl_icon"
        android:text="领的支付宝要爆炸了"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fl_icon"
        android:layout_marginRight="@dimen/margin_right_small"
        android:text="10月19日"
        android:textColor="@color/text_more_gray"
        android:textSize="10sp" />

</RelativeLayout>