<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/xuxian" />

        <RelativeLayout
            android:id="@+id/rl_cancer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_50"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@color/main_white_pure_color"
            android:paddingLeft="@dimen/margin_left_small">

            <TextView
                android:id="@+id/tv_cancer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="对癌食疗方"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_big" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_small"
                android:src="@drawable/arrows_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/main_gray_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cancer_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_50"
            android:background="@color/main_white_pure_color"
            android:paddingLeft="@dimen/margin_left_small">

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="癌症食疗方"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_big" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_small"
                android:src="@drawable/arrows_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/main_gray_color" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>