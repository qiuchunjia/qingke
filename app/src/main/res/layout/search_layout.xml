<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:background="@drawable/titlebar"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/key_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/search_icon"
            android:drawablePadding="2dp"
            style="@style/cmtedit"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:hint="请输入关键字" />

        <Button
            android:id="@+id/btn_search"
            style="@style/rightButton"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:text="搜索" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_weibo"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/s_weibo_pressed" />

        <ImageView
            android:id="@+id/btn_ketang"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/s_ketang" />

        <ImageView
            android:id="@+id/btn_zixun"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/s_zixun" />

        <ImageView
            android:id="@+id/btn_wenda"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/s_wenda" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>