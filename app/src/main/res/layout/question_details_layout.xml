<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar">

        <Button
            android:id="@+id/btn_back"
            style="@style/leftButton"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="返回" />

        <TextView
            style="@style/title"
            android:layout_centerInParent="true"
            android:text="@string/question_details_txt" />

        <Button
            android:id="@+id/btn_prev"
            style="@style/rightButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="回退"
            android:visibility="gone" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.3"
                android:textSize="16dp"
                android:text="这是详情" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="用户名" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="13dp"
                    android:text="2014-12-11" />

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/txt_time"
                    android:textSize="13dp"
                    android:text="种类：" />

                <com.zhiyicx.zycx.widget.CustomLinearLayout
                    android:id="@+id/top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@id/txt_user"
                    android:layout_toLeftOf="@id/txt_type" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/line" />

            <com.zhiyicx.zycx.widget.WrapListView
                android:id="@+id/list_answer"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:listSelector="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5500ffff"
                android:padding="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="相关内容" />

            <com.zhiyicx.zycx.widget.WrapListView
                android:id="@+id/list_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="45dp"
        android:background="@drawable/footbg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/face_bar" />

        <EditText
            android:id="@+id/edit_answer"
            style="@style/cmtedit"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_answer"
            style="@style/rightButton"
            android:textSize="15dp"
            android:text="回答" />
    </LinearLayout>

    <com.zhiyicx.zycx.sociax.component.TSFaceView
        android:id="@+id/face_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:tag="ture" />
</LinearLayout>