<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_pure_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white_pure_color"
        android:padding="@dimen/margin_left_small">

        <FrameLayout
            android:id="@+id/fl_vedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_vedio"
                android:layout_width="120dp"
                android:layout_height="85dp"
                android:background="@color/main_gray_color"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_vedio_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:src="@drawable/playicon" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_left_small"
            android:layout_toLeftOf="@id/fl_vedio"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="我也是抗癌小手"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginRight="@dimen/margin_left_small"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/fl_vedio"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="我也是抗癌黑呵呵呵呵呵呵会飞的发顺丰的法定假发的康师傅骄傲的叫法埃德加小手"
            android:textColor="@color/text_more_gray"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_marginRight="@dimen/margin_left_small"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/liulanliang"
            android:drawablePadding="5dp"
            android:text="2"
            android:textColor="@color/text_more_gray"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_marginRight="@dimen/margin_left_small"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/fl_vedio"
            android:text="已更新5课"
            android:textColor="@color/text_more_gray"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>

</LinearLayout>