<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white_pure_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white_pure_color"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_50"
            android:background="@color/main_white_pure_color"
            android:padding="@dimen/margin_left_small">

            <TextView
                android:id="@+id/tv_infor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="患者信息"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_very_big" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_small"
                android:layout_toRightOf="@id/tv_infor"
                android:background="@drawable/view_border_green_white_3"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_common" />

            <ImageView
                android:id="@+id/iv_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_small"
                android:src="@drawable/binglijiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:layout_marginRight="@dimen/margin_right_small"
            android:background="@color/text_green" />

        <LinearLayout
            android:id="@+id/rl_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_white_pure_color"
            android:orientation="vertical"
            android:padding="@dimen/margin_left_small">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="王小宝"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_very_big" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_username"
                    android:layout_marginLeft="@dimen/item_height"
                    android:layout_toRightOf="@id/tv_username"
                    android:text="男"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_common" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_gender"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_toRightOf="@id/tv_gender"
                    android:text="59岁"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_common" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_nation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="民族：汉"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_marry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="婚姻：已婚"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="职业：农民"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="文化程度：高中"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_pretect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="保险形式：商业保险"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_hometown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="籍贯：中国上海"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="居住地：中国上海"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="身高：175cm"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="体重：68kg"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_50"
            android:background="@color/main_white_pure_color"
            android:padding="@dimen/margin_left_small">

            <TextView
                android:id="@+id/tv_histroy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="既往史"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_very_big" />

            <TextView
                android:id="@+id/tv_edit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_small"
                android:layout_toRightOf="@id/tv_histroy"
                android:background="@drawable/view_border_green_white_3"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_common" />

            <ImageView
                android:id="@+id/iv_click2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_small"
                android:src="@drawable/binglijiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:layout_marginRight="@dimen/margin_right_small"
            android:background="@color/text_green" />

        <LinearLayout
            android:id="@+id/rl_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_white_pure_color"
            android:orientation="vertical"
            android:padding="@dimen/margin_left_small">

            <TextView
                android:id="@+id/tv_user_histroy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="既往史：既往有高血压，糖尿病史"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_allegry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="过敏史：既往有青霉素，花粉过敏史"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_useraddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="个人史：出生于中国上海，生活在中国上海，曾旅游或居住在北京"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_food_habit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="饮食习惯：荤素均衡"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_smoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="抽烟：抽烟，18岁开始，10根/日，已戒烟，戒烟时间 2013-12"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_drink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="饮酒：饮酒，18岁开始，270ml/日，已戒酒，戒酒时间 2013-12"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="月经史：月经年纪12岁，末次月经时间2012-12-16"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="子女："
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />

            <TextView
                android:id="@+id/tv_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:text="家族史："
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_common" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_third"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_50"
            android:background="@color/main_white_pure_color"
            android:padding="@dimen/margin_left_small">

            <TextView
                android:id="@+id/tv_now_histroy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="现病史"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_very_big" />

            <TextView
                android:id="@+id/tv_now_edit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_small"
                android:layout_toRightOf="@id/tv_now_histroy"
                android:background="@drawable/view_border_green_white_3"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_common" />

            <ImageView
                android:id="@+id/iv_now_click2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_small"
                android:src="@drawable/binglijiantou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="@dimen/margin_left_small"
            android:layout_marginRight="@dimen/margin_right_small"
            android:background="@color/text_green" />
    </LinearLayout>

</ScrollView>