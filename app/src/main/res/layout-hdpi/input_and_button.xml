<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <!-- android:drawableLeft="@drawable/icon_search_32" -->

        <EditText
            android:id="@+id/input_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@drawable/search_bg"
            android:cursorVisible="true"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:hint="@string/search_key"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textSize="16sp">

        </EditText>

        <ImageButton
            android:id="@+id/clear_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/input_edit"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:src="@drawable/button_del"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/go_for_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@+id/input_edit"
        android:background="@drawable/button_search"
        android:text="@string/search"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>