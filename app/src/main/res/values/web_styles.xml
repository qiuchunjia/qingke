    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/home_btn_bg</item>
        <item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="search_radiobutton_weibo">
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@drawable/button_search_weibo</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="search_radiobutton_user">
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@drawable/button_search_user</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="user_info_text">
        <item name="android:background">@drawable/user_info_text_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/info_button_s_size</item>
        <item name="android:textColor">@color/main_fant_color</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="setting_item">
        <item name="android:background">@drawable/setting_item_img</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/info_button_s_size</item>
        <item name="android:textColor">@color/main_fant_color</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <style name="info_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="task_more">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="task_detail_1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="task_detail_2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_link_color</item>
    </style>

    <style name="CustomProgressStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minWidth">30px</item>
        <item name="android:maxWidth">30px</item>
        <item name="android:minHeight">30px</item>
        <item name="android:maxHeight">30px</item>
    </style>

    <style name="tag_style">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/d_find_tag_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">tagOnClick</item>
        <item name="android:visibility">invisible</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="tag_category_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

